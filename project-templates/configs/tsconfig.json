{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@repo/types": [
                "./packages/types/src"
            ],
            "@repo/utils": [
                "./packages/utils/src"
            ],
            "@repo/config": [
                "./packages/config/src"
            ],
            "@repo/llm-client": [
                "./packages/llm-client/src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        ".next",
        "coverage"
    ]
}